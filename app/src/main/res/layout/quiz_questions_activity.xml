<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizQuestions">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="25dp"
    android:layout_gravity="center_horizontal"
      android:orientation="vertical"
    android:padding="10dp">

    <TextView
      android:id="@+id/questionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/textColorOnWhite"
      android:text="Question" />

    <LinearLayout
        android:id="@+id/progresslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:padding="9dp">
      <ProgressBar
          android:id="@+id/progress"
          style="?android:attr/progressBarStyleHorizontal"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:min="0"
          android:progress="0"
          android:minHeight="50dp"
          android:indeterminate="false"
          android:max="15">

      </ProgressBar>
      <TextView
          android:id="@+id/progressText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/progressText"
          android:layout_gravity="center"
          android:textSize="15sp"
          android:padding="3dp"
          android:textColor="@color/graytext" />


    </LinearLayout>

    <TextView
        android:id="@+id/optionTextOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/option"
        android:padding="14dp"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_margin="7dp"
        android:text="Apple"
        android:textColor="#E6104570" />

    <TextView
        android:id="@+id/optionTextTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/option"
        android:padding="14dp"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_margin="7dp"
        android:text="Orange"
        android:textColor="#E6104570" />

    <TextView
        android:id="@+id/optionTextThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/option"
        android:padding="14dp"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_margin="7dp"
        android:text="Orange"
        android:textColor="#E6104570" />


    <TextView
        android:id="@+id/optionTextFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/option"
        android:padding="14dp"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_margin="7dp"
        android:text="Orange"
        android:textColor="#E6104570" />

    <Button
        android:id="@+id/buttonSubmitNext"
        android:background="@drawable/rounded_corner"
        android:layout_width="130dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:text="@string/txtSubmit"
        android:textColor="@color/cardBgColor"
        android:layout_marginTop="8dp"

        ></Button>
  </LinearLayout>

  </ScrollView>